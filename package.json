{
  "name": "mcp-loader",
  "version": "0.1.1",
  "description": "Auto-discover and load MCP tools from a directory",
  "type": "module",
  "bin": "./dist/index.js",
  "main": "./dist/tool.js",
  "module": "./dist/tool.js",
  "types": "./dist/tool.d.ts",
  "exports": {
    ".": {
      "import": "./dist/tool.js",
      "types": "./dist/tool.d.ts"
    },
    "./tool": {
      "import": "./dist/tool.js",
      "types": "./dist/tool.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": ["mcp", "modelcontextprotocol", "claude", "tools", "loader", "auto-discover"],
  "author": "Eugen Eistrach",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/EugenEistrach/mcp-loader.git"
  },
  "homepage": "https://github.com/EugenEistrach/mcp-loader#readme",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^24.5.2",
    "tsup": "^8.5.0"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "zod": "3.23.8"
  }
}
